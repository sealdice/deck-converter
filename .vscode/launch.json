  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cli/deck-converter",
      "cwd": "${workspaceFolder}",
      "args": ["-O", "${input:input_file}"]
    }
  ],
  "inputs": [
    {
      "id": "input_file",
      "type": "promptString",
      "description": "Enter the arguments to pass to the program",
      "default": ""
    }
  ]
}
